{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "exclude": ["deno.json", "flow-view.min.js", "package.json"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 120
    }
  },
  "lint": {
    "files": {
      "exclude": ["flow-view.min.js"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-case-declarations"]
    }
  }
}
