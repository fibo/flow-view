{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "lib": ["deno.window", "dom"],
    "strict": true
  },
  "fmt": {
    "files": {
      "exclude": [
        "deno.json",
        "package.json",
        ".vscode/settings.json",
        ".vim/coc-settings.json"
      ]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 120
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-case-declarations"]
    }
  }
}
