{
  "name": "flow-view",
  "description": "is a visual editor for dataflow programming",
  "version": "7.0.0",
  "license": "MIT",
  "homepage": "https://fibo.github.io/flow-view",
  "author": {
    "name": "Gianluca Casati",
    "url": "http://fibo.github.io"
  },
  "type": "module",
  "types": "dist/flow-view.d.ts",
  "exports": {
    "import": "./dist/flow-view.js",
    "types": "./dist/flow-view.d.ts"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json --removeComments && tsc --project tsconfig.build.json --declaration --emitDeclarationOnly",
    "check_types": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "start": "github-pages-router",
    "watch": "tsc --project tsconfig.build.json --removeComments --watch"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fibo/flow-view.git"
  },
  "keywords": [
    "dataflow",
    "visual",
    "editor",
    "vanilla",
    "web-component"
  ],
  "bugs": {
    "url": "https://github.com/fibo/flow-view/issues"
  },
  "devDependencies": {
    "github-pages-router": "^1.0.2",
    "lint-staged": "^15.2.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{css,html,json,md,ts}": [
      "prettier --write"
    ]
  },
  "pre-commit": [
    "check_types",
    "lint-staged"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
